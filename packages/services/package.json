{
  "name": "@app/services",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:compile",
    "build:compile": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "clean": "rm -rf dist",
    "dev": "npm run clean && npm run build:watch",
    "format": "eslint . --max-warnings=0 --fix",
    "lint": "eslint . --max-warnings=0",
    "postinstall": "npm run build",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@app/db": "*",
    "@app/utils": "*",
    "@lucia-auth/oauth": "^3.5.2",
    "awilix": "^10.0.1",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.3.1",
    "jsonwebtoken": "^9.0.2",
    "lucia": "^2.7.6",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@app/config": "*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/*.js"
    }
  }
}
