{
  "name": "@app/db",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:schema && tsc --noEmit false",
    "build:schema": "prisma-import --force && prisma generate",
    "format": "eslint . --max-warnings=0 --fix",
    "lint": "eslint . --max-warnings=0",
    "migrate:dev": "npm run build:schema && prisma migrate dev",
    "postinstall": "npm run build",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@app/utils": "*",
    "@prisma/client": "^5.6.0",
    "@prisma/extension-read-replicas": "^0.3.0"
  },
  "devDependencies": {
    "@app/config": "*",
    "prisma": "^5.6.0",
    "prisma-import": "^1.0.5"
  },
  "prisma": {
    "import": {
      "schemas": "schema/models/**/*.prisma",
      "output": "schema/schema.prisma"
    },
    "schema": "schema/schema.prisma"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
