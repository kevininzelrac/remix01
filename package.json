{
  "name": "remix01",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "vite build && vite build --ssr",
    "dev": "node ./server.mjs",
    "format": "eslint . --ext .ts,.tsx --fix",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "cross-env NODE_ENV=production node ./server.mjs",
    "test:env": "dotenv -e .env.test -- npx prisma migrate reset --force",
    "test:jest": "dotenv -e .env.test -- npx jest",
    "test": "npm run test:env && npm run test:jest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@prisma/extension-read-replicas": "^0.3.0",
    "@remix-run/node": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "isbot": "^3.6.8"
  },
  "devDependencies": {
    "@aws-sdk/client-apigatewayv2": "^3.454.0",
    "@aws-sdk/client-cloudfront": "^3.457.0",
    "@aws-sdk/client-iam": "^3.454.0",
    "@aws-sdk/client-lambda": "^3.454.0",
    "@aws-sdk/client-s3": "^3.456.0",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@remix-run/express": "^2.3.1",
    "@remix-run/testing": "^2.3.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "schema": "app/server/db/schema.prisma",
    "seed": "ts-node --esm app/server/db/seed.ts"
  }
}
